<div class="container-sm">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page">Imports</li>
    </ol>
  </nav>

  <h2>GHArchive Imports</h2>

  <div class="row mb-4">
    <div class="col-md-2 col-6 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <h4 class="card-title text-primary mb-1"><%= @recent_stats[:total] %></h4>
          <p class="card-text small text-muted mb-0">Total Imports</p>
        </div>
      </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <h4 class="card-title text-success mb-1"><%= @recent_stats[:successful] %></h4>
          <p class="card-text small text-muted mb-0">Successful</p>
        </div>
      </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <h4 class="card-title text-danger mb-1"><%= @recent_stats[:failed] %></h4>
          <p class="card-text small text-muted mb-0">Failed</p>
        </div>
      </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <h4 class="card-title text-info mb-1"><%= number_with_delimiter @recent_stats[:repositories_processed] %></h4>
          <p class="card-text small text-muted mb-0">Repos Processed</p>
        </div>
      </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <h4 class="card-title text-warning mb-1"><%= number_with_delimiter @recent_stats[:repositories_with_releases] %></h4>
          <p class="card-text small text-muted mb-0">With Releases</p>
        </div>
      </div>
    </div>
    <div class="col-md-2 col-6 mb-3">
      <div class="card text-center">
        <div class="card-body">
          <h4 class="card-title text-secondary mb-1">
            <% if @recent_stats[:total] > 0 %>
              <%= number_to_percentage(@recent_stats[:successful].to_f / @recent_stats[:total] * 100, precision: 1) %>
            <% else %>
              N/A
            <% end %>
          </h4>
          <p class="card-text small text-muted mb-0">Success Rate</p>
        </div>
      </div>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Filename</th>
          <th>Imported At</th>
          <th>Status</th>
          <th>Repos Processed</th>
          <th>With Releases</th>
          <th>Error</th>
        </tr>
      </thead>
      <tbody>
        <% @imports.each do |import| %>
          <tr>
            <td>
              <%= link_to import.filename, import.url, target: '_blank', rel: 'noopener', class: 'text-decoration-none' %>
            </td>
            <td>
              <% if import.imported_at %>
                <small class="text-muted"><%= import.imported_at.strftime('%Y-%m-%d %H:%M:%S UTC') %></small>
              <% end %>
            </td>
            <td>
              <% if import.success? %>
                <span class="badge bg-success">
                  <i class="bi bi-check-circle"></i> Success
                </span>
              <% else %>
                <span class="badge bg-danger">
                  <i class="bi bi-x-circle"></i> Failed
                </span>
              <% end %>
            </td>
            <td>
              <% if import.repositories_synced_count %>
                <span class="badge bg-secondary"><%= number_with_delimiter import.repositories_synced_count %></span>
              <% end %>
            </td>
            <td>
              <% if import.releases_synced_count %>
                <span class="badge bg-info"><%= number_with_delimiter import.releases_synced_count %></span>
              <% end %>
            </td>
            <td>
              <% if import.error_message.present? %>
                <div class="alert alert-danger alert-sm p-2 mb-0" role="alert">
                  <small>
                    <i class="bi bi-exclamation-triangle"></i>
                    <%= truncate(import.error_message, length: 100) %>
                  </small>
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages && @pagy.pages > 1 %>
</div>
