<% @meta_title = "#{@topic} | #{t('virtual.models.topic.one')}" %>
<% @meta_description = "Repositories with the topic #{@topic}" %>

<div class="container-sm">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to t('virtual.models.topic.other'), topics_path %></li>
      <li class="breadcrumb-item active" aria-current="page"><%= @topic %></li>
    </ol>
  </nav>

  <h2>
    <%= t('virtual.models.topic.one') %>:
    "<%= @topic %>"
  </h2>

  <div class='row'>
    <div class='col-lg-8'>
      <%= render @repositories %>
      <%== pagy_bootstrap_nav(@pagy) if @pagy.pages && @pagy.pages > 1 %>
    </div>
    <div class='col-lg-4'>
      <div class="card">
        <div class="card-header">
          <%= t('.related_topics') %>
        </div>
        <div class="list-group list-group-flush">
          <% @related_topics.each do |topic, count| %>
            <% next if topic.blank? %>
            <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="<%= topic_path(topic) %>">
              <%= topic %>
              <span class="badge bg-primary rounded-pill"><%= number_with_delimiter count%></span>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
