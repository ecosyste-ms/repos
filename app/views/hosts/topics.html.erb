<% @meta_title = "#{@host} #{t('virtual.models.topic.other')}" %>
<% @meta_description = "Most popular repository topics on #{@host}" %>

<div class="container-sm">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Hosts", root_path %></li>
      <li class="breadcrumb-item"><%= link_to @host, host_path(@host) %></li>
      <li class="breadcrumb-item active" aria-current="page"><%= t('virtual.models.topic.other') %></li>
    </ol>
  </nav>

  <%= render 'hosts/tabs' %>

  <div class="row">
    <% @topics.each do |topic| %>
      <% next if topic.name.blank? %>
      <div class="col-md-4">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to topic.name, topic_path(topic.name) %>
            </h5>
            <p class="card-text">
              <%= number_with_delimiter topic.repositories_count %> <%= Repository.model_name.human(count: topic.repositories_count) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>
</div>
