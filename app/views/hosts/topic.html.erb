<% @meta_title = "#{@host.to_s} topics: #{params[:topic]}" %>
<% @meta_description = "Repositories of #{@host} with topic #{params[:topic]}" %>

<div class="container-sm">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Hosts", root_path %></li>
      <li class="breadcrumb-item"><%= link_to @host, host_path(@host) %></li>
      <li class="breadcrumb-item"><%= link_to t('virtual.models.topic.other'), topics_host_path(@host) %></li>
      <li class="breadcrumb-item active" aria-current="page"><%= params[:topic] %></li>
    </ol>
  </nav>

  <ul class="nav nav-tabs my-3">
    <li class="nav-item">
      <a class="nav-link active" aria-current="page">
        Repositories
      </a>
    </li>
    <%= render 'hosts/sort' %>
  </ul>

  <div class='row'>
    <div class='col-lg-8'>
      <%= render @repositories %>
      <%== pagy_bootstrap_nav(@pagy) if @pagy.pages && @pagy.pages > 1 %>
    </div>
    <div class='col-lg-4'>
      <div class="card">
        <div class="card-header">
          Related Keywords
        </div>
        <div class="list-group list-group-flush">
          <% @related_topics.each do |topic, count| %>
            <% next if topic.blank? %>
            <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" href="<%= topic_host_path(@host.name, topic) %>">
              <%= topic %>
              <span class="badge bg-primary rounded-pill"><%= number_with_delimiter count%></span>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
